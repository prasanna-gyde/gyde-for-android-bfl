<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4A40E2" />
            <gradient android:angle="-90" android:endColor="#8079ea" android:startColor="#4A40E2" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#8079ea" />
            <solid android:color="#4A40E2" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4A40E2" />
            <gradient android:angle="-90" android:endColor="#4A40E2" android:startColor="#8079ea" />
        </shape>
    </item>
</selector>